<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <script src="https://kit.fontawesome.com/3516325475.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" 
              integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>

    <body>
        <header class="mb-3">
            <nav class="navbar navbar-expand-lg bg-body-tertiary">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Posts" asp-action="Index">SocialNews</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a id="hotNav" class="nav-link" asp-controller="Posts" asp-action="Index" asp-route-sort="hot">
                                    <i class="fa-solid fa-fire-flame-curved"></i>
                                    Hot
                                </a>
                            </li>
                            <li class="nav-item">
                                <a id="newNav" class="nav-link" asp-controller="Posts" asp-action="Index" asp-route-sort="new">
                                    <i class="fa-solid fa-newspaper"></i>
                                    New
                                </a>
                            </li>
                            <li class="nav-item">
                                <a id="topNav" class="nav-link" asp-controller="Posts" asp-action="Index" asp-route-sort="top">
                                    <i class="fa-solid fa-arrow-up"></i>
                                    Top
                                </a>
                            </li>
                        </ul>
                        <div class="d-flex w-50 me-auto">
                            <a asp-controller="Posts" asp-action="Submit" class="btn btn-primary me-1" title="Create Post">
                                <i class="fa-solid fa-plus"></i>
                            </a>
                            <form asp-controller="Posts" asp-action="Search" class="input-group" method="get">
                                <input type="search" class="form-control" placeholder="Search" name="query"/>
                                <button type="submit" class="btn btn-outline-success">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                </button>
                            </form>
                        </div>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>

        <main class="container">
            @RenderBody()
        </main>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" 
                integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
