@model EditViewModel
@{
	ViewData["Title"] = "Edit Post - SocialNews";
}

<div class="d-flex justify-content-center">
	<form asp-controller="Posts" asp-action="Edit" method="post" class="w-50">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-floating mb-3">
			<input asp-for="Title" class="form-control" placeholder="Title" required />
			<label asp-for="Title"></label>
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="form-floating mb-3">
			<input asp-for="URL" class="form-control" placeholder="URL" required />
			<label asp-for="URL"></label>
			<span asp-validation-for="URL" class="text-danger"></span>
		</div>
		<input asp-for="postID" type="hidden" />
		<button type="submit" class="btn btn-primary">Save</button>
	</form>
</div>

